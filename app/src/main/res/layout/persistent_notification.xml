<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/persistentNotification"
    android:layout_height="64dp">
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_vertical" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/notification_roomText"
        android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:text="Room: None"
        android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent"/></LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <Button
        android:id="@+id/notification_light_button1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Primary"
        android:drawableTop="@drawable/ic_bulb_notif_yellow"
        android:textSize="8sp"
        android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent.Title"
        android:layout_weight="30"
        />
        <Button
            android:id="@+id/notification_light_button2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Primary"
            android:drawableTop="@drawable/ic_bulb_notif_yellow"
            android:textSize="8sp"
            android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent.Title"
            android:layout_weight="30"
            />

        <Button
            android:id="@+id/notification_light_button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Primary"
            android:drawableTop="@drawable/ic_bulb_notif_yellow"
            android:textSize="8sp"
            android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent.Title"
            android:layout_weight="30"
            />

        <Button
            android:id="@+id/notification_light_button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Primary"
            android:drawableTop="@drawable/ic_bulb_notif_yellow"
            android:textSize="8sp"
            android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent.Title"
            android:layout_weight="30"
            />

        <Button
            android:id="@+id/notification_light_button5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Primary"
            android:drawableTop="@drawable/ic_bulb_notif_yellow"
            android:textSize="8sp"
            android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent.Title"
            android:layout_weight="30"
            />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>